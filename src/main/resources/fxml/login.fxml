<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.layout.StackPane?>

<VBox alignment="CENTER" spacing="30.0" styleClass="root" stylesheets="@../css/styles.css"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.student.registration.controllers.LoginController"
      prefWidth="1200" prefHeight="800">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
    </padding>

    <VBox alignment="CENTER" spacing="25.0" styleClass="card" maxWidth="450" minWidth="400">
        <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
        </padding>

        <!-- Logo/Icon -->
        <StackPane alignment="CENTER" prefHeight="100.0" prefWidth="100.0">
            <Circle radius="50.0" style="-fx-fill: linear-gradient(to right, #667eea, #764ba2);" />
            <Text text="ðŸŽ“" style="-fx-font-size: 50px;" />
        </StackPane>

        <!-- Title -->
        <VBox alignment="CENTER" spacing="10.0">
            <Text styleClass="text-heading" text="Student Portal" />
            <Text styleClass="text-subheading" text="Course Registration System" />
        </VBox>

        <!-- Login Form -->
        <VBox spacing="20.0" alignment="CENTER" maxWidth="350">
            <Label text="Welcome Back" styleClass="card-header" />
            <Label text="Enter your credentials to access your account" styleClass="card-description" />

            <VBox spacing="8.0" alignment="TOP_LEFT">
                <Label text="Username" styleClass="label" />
                <TextField fx:id="usernameField" promptText="Enter your username" styleClass="text-field" 
                          prefHeight="45" />
            </VBox>

            <VBox spacing="8.0" alignment="TOP_LEFT">
                <Label text="Password" styleClass="label" />
                <PasswordField fx:id="passwordField" promptText="Enter your password" styleClass="password-field" 
                              prefHeight="45" />
            </VBox>

            <Label fx:id="errorMessageLabel" styleClass="alert-error" visible="false" managed="false" 
                   maxWidth="Infinity" />

            <Button text="Sign In" onAction="#handleLogin" maxWidth="Infinity" styleClass="button" 
                    prefHeight="45" />
        </VBox>

        <!-- Demo Credentials -->
        <VBox spacing="8.0" styleClass="activity-card" maxWidth="350">
            <Label text="Demo Credentials:" styleClass="label" />
            <VBox spacing="5.0">
                <Label text="Username: john.doe | Password: password123" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;" />
                <Label text="Username: jane.smith | Password: student456" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;" />
                <Label text="Username: admin | Password: admin123" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;" />
            </VBox>
        </VBox>
    </VBox>
</VBox>
