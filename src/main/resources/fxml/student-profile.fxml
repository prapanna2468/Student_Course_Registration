<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.ScrollPane?>

<VBox alignment="TOP_CENTER" spacing="0" styleClass="root" stylesheets="@../css/styles.css"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.student.registration.controllers.StudentProfileController"
      prefWidth="1200" prefHeight="800">

    <!-- Header Section -->
    <HBox alignment="CENTER_LEFT" styleClass="dashboard-header" prefWidth="Infinity" VBox.vgrow="NEVER">
        <Button text="â† Back to Dashboard" onAction="#goToDashboard" styleClass="button-outline" />
        <HBox alignment="CENTER_RIGHT" spacing="15.0" HBox.hgrow="ALWAYS">
            <Text styleClass="dashboard-welcome-text" text="Student Profile" />
            <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel" styleClass="button-outline" 
                    visible="false" managed="false" />
            <Button fx:id="editSaveButton" text="Edit Profile" onAction="#handleEditSave" styleClass="button" />
        </HBox>
    </HBox>

    <!-- Main Content Area -->
    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="scroll-pane">
        <content>
            <VBox alignment="TOP_CENTER" spacing="25.0" maxWidth="1200">
                <padding>
                    <Insets left="30.0" right="30.0" top="30.0" bottom="30.0"/>
                </padding>

                <Label fx:id="saveMessageLabel" styleClass="alert-success" text="Profile updated successfully!" 
                       visible="false" managed="false" alignment="CENTER" maxWidth="Infinity" />

                <GridPane hgap="30.0" vgap="25.0" alignment="TOP_CENTER">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" percentWidth="35.0" />
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="65.0" />
                    </columnConstraints>

                    <!-- Profile Summary Card (Left Column) -->
                    <VBox styleClass="card" GridPane.columnIndex="0" GridPane.rowIndex="0" 
                          alignment="TOP_CENTER" spacing="20.0">
                        <StackPane alignment="CENTER" prefHeight="120.0" prefWidth="120.0" 
                                   styleClass="profile-image-container">
                            <Text text="ðŸ‘¤" style="-fx-font-size: 60px;" />
                        </StackPane>
                        
                        <VBox alignment="CENTER" spacing="10.0">
                            <Label fx:id="nameLabel" styleClass="card-header" text="Student Name" 
                                   alignment="CENTER" maxWidth="Infinity" />
                            <Label fx:id="emailLabel" styleClass="card-description" text="student.email@university.edu" 
                                   alignment="CENTER" maxWidth="Infinity" />
                            <HBox alignment="CENTER" spacing="10.0">
                                <Label fx:id="programBadge" styleClass="badge, badge-blue" text="Program" />
                                <Label fx:id="semesterBadge" styleClass="badge, badge-purple" text="Semester" />
                            </HBox>
                        </VBox>

                        <VBox spacing="15.0" alignment="CENTER_LEFT" maxWidth="Infinity">
                            <VBox spacing="5.0">
                                <Label styleClass="label" text="Student ID:" />
                                <Label fx:id="studentIdLabel" styleClass="activity-item" text="CS2021001" />
                            </VBox>
                            <VBox spacing="5.0">
                                <Label styleClass="label" text="Phone:" />
                                <Label fx:id="phoneLabel" styleClass="activity-item" text="Not Provided" />
                            </VBox>
                            <VBox spacing="5.0">
                                <Label styleClass="label" text="Address:" />
                                <Label fx:id="addressLabel" styleClass="activity-item" text="Not Provided" />
                            </VBox>
                            <VBox spacing="5.0">
                                <Label styleClass="label" text="Bio:" />
                                <Label fx:id="bioLabel" styleClass="activity-item" text="No bio provided" 
                                       wrapText="true" />
                            </VBox>
                        </VBox>
                    </VBox>

                    <!-- Profile Details (Right Column) -->
                    <VBox styleClass="card" GridPane.columnIndex="1" GridPane.rowIndex="0" spacing="25.0">
                        <VBox spacing="10.0">
                            <Label styleClass="card-header" text="Personal Information" />
                            <Label styleClass="card-description" text="View and edit your personal details" />
                        </VBox>

                        <GridPane hgap="20.0" vgap="20.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="ALWAYS" percentWidth="50.0" />
                                <ColumnConstraints hgrow="ALWAYS" percentWidth="50.0" />
                            </columnConstraints>

                            <VBox spacing="8.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                <Label text="Full Name" styleClass="label" />
                                <TextField fx:id="nameField" promptText="Enter your full name" 
                                          styleClass="text-field" visible="false" managed="false" />
                            </VBox>
                            
                            <VBox spacing="8.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                <Label text="Email Address" styleClass="label" />
                                <TextField fx:id="emailField" promptText="Enter your email" 
                                          styleClass="text-field" visible="false" managed="false" />
                            </VBox>

                            <VBox spacing="8.0" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                <Label text="Academic Program" styleClass="label" />
                                <ComboBox fx:id="programComboBox" promptText="Select your program" 
                                         styleClass="combo-box" visible="false" managed="false" maxWidth="Infinity" />
                            </VBox>
                            
                            <VBox spacing="8.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                <Label text="Current Semester" styleClass="label" />
                                <ComboBox fx:id="semesterComboBox" promptText="Select semester" 
                                         styleClass="combo-box" visible="false" managed="false" maxWidth="Infinity" />
                            </VBox>

                            <VBox spacing="8.0" GridPane.columnIndex="0" GridPane.rowIndex="2">
                                <Label text="Student ID" styleClass="label" />
                                <TextField fx:id="studentIdField" promptText="Enter student ID" 
                                          styleClass="text-field" visible="false" managed="false" />
                            </VBox>
                            
                            <VBox spacing="8.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                                <Label text="Phone Number" styleClass="label" />
                                <TextField fx:id="phoneField" promptText="Enter phone number" 
                                          styleClass="text-field" visible="false" managed="false" />
                            </VBox>

                            <VBox spacing="8.0" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2">
                                <Label text="Address" styleClass="label" />
                                <TextField fx:id="addressField" promptText="Enter your address" 
                                          styleClass="text-field" visible="false" managed="false" />
                            </VBox>
                            
                            <VBox spacing="8.0" GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="2">
                                <Label text="Bio" styleClass="label" />
                                <TextArea fx:id="bioArea" promptText="Tell us about yourself..." 
                                         styleClass="text-area" visible="false" managed="false" prefRowCount="3" />
                            </VBox>
                        </GridPane>
                    </VBox>
                </GridPane>
            </VBox>
        </content>
    </ScrollPane>
</VBox>
