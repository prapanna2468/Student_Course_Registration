<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.student.registration.controllers.ViewCoursesController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="header">
         <children>
            <Button mnemonicParsing="false" onAction="#goBack" text="← Back" styleClass="secondary-button" />
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Registered Courses" styleClass="header-text">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Text>
         </children>
         <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <VBox spacing="20.0">
         <children>
            <Text fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="Your Registered Courses" styleClass="section-title">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Text>
            <TableView fx:id="coursesTable" styleClass="courses-table">
               <columns>
                  <TableColumn fx:id="courseIdColumn" prefWidth="100.0" text="Course ID" />
                  <TableColumn fx:id="courseNameColumn" prefWidth="200.0" text="Course Name" />
                  <TableColumn fx:id="instructorColumn" prefWidth="150.0" text="Instructor" />
                  <TableColumn fx:id="creditsColumn" prefWidth="80.0" text="Credits" />
                  <TableColumn fx:id="scheduleColumn" prefWidth="200.0" text="Schedule" />
               </columns>
            </TableView>
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleDeleteCourse" text="Delete Selected Course" styleClass="danger-button" />
                  <Button mnemonicParsing="false" onAction="#goBack" text="Back to Dashboard" styleClass="secondary-button" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
