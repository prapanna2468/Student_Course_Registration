<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.student.registration.controllers.ProfileController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="header">
         <children>
            <Button mnemonicParsing="false" onAction="#goBack" text="← Back" styleClass="secondary-button" />
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Student Profile" styleClass="header-text">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Text>
         </children>
         <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <VBox alignment="CENTER" spacing="20.0">
         <children>
            <VBox spacing="20.0" styleClass="form-container">
               <children>
                  <Text fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="Edit Profile Information" styleClass="section-title">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Text>
                  <GridPane hgap="20.0" vgap="15.0">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                        <Label text="Student ID:" styleClass="form-label" />
                        <TextField fx:id="studentIdField" styleClass="form-field" GridPane.columnIndex="1" />
                        <Label text="Name:" styleClass="form-label" GridPane.rowIndex="1" />
                        <TextField fx:id="nameField" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="Email:" styleClass="form-label" GridPane.rowIndex="2" />
                        <TextField fx:id="emailField" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label text="Program:" styleClass="form-label" GridPane.rowIndex="3" />
                        <TextField fx:id="programField" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <Label text="Semester:" styleClass="form-label" GridPane.rowIndex="4" />
                        <TextField fx:id="semesterField" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                     </children>
                  </GridPane>
                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#handleSave" text="Save Changes" styleClass="primary-button" />
                        <Button mnemonicParsing="false" onAction="#goBack" text="Cancel" styleClass="secondary-button" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
               </padding>
            </VBox>
         </children>
         <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="30.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
