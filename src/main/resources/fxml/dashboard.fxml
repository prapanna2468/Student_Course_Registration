<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.student.registration.controllers.DashboardController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="header">
         <children>
            <Text fx:id="welcomeLabel" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Welcome, Student!" styleClass="header-text">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Text>
            <Region HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#handleLogout" text="Logout" styleClass="secondary-button" />
            <Button mnemonicParsing="false" onAction="#handleExit" text="Exit" styleClass="danger-button" />
         </children>
         <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <HBox spacing="30.0">
         <children>
            <VBox spacing="20.0" HBox.hgrow="ALWAYS">
               <children>
                  <Text fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="Navigation" styleClass="section-title">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Text>
                  <VBox spacing="15.0" styleClass="navigation-container">
                     <children>
                        <Button mnemonicParsing="false" onAction="#goToProfile" text="ðŸ‘¤ Student Profile" styleClass="nav-button" />
                        <Button mnemonicParsing="false" onAction="#goToRegisterCourse" text="ðŸ“š Register for Courses" styleClass="nav-button" />
                        <Button mnemonicParsing="false" onAction="#goToViewCourses" text="ðŸ“‹ View Registered Courses" styleClass="nav-button" />
                     </children>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </VBox>
               </children>
            </VBox>
            <VBox spacing="20.0" HBox.hgrow="ALWAYS">
               <children>
                  <Text fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="Dashboard Overview" styleClass="section-title">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Text>
                  <VBox spacing="15.0" styleClass="stats-container">
                     <children>
                        <Label fx:id="totalCoursesLabel" text="Total Registered Courses: 0" styleClass="stats-label" />
                        <PieChart fx:id="courseChart" prefHeight="300.0" prefWidth="300.0" styleClass="course-chart" />
                     </children>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </VBox>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
      </HBox>
   </center>
</BorderPane>
