<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.student.registration.controllers.RegisterCourseController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="header">
         <children>
            <Button mnemonicParsing="false" onAction="#goBack" text="← Back" styleClass="secondary-button" />
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Register for Courses" styleClass="header-text">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Text>
         </children>
         <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <VBox spacing="20.0">
         <children>
            <Text fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="Available Courses" styleClass="section-title">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Text>
            <ScrollPane fitToWidth="true" styleClass="courses-scroll">
               <content>
                  <VBox fx:id="coursesContainer" spacing="10.0" styleClass="courses-container">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </VBox>
               </content>
            </ScrollPane>
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleRegister" text="Update Registration" styleClass="primary-button" />
                  <Button mnemonicParsing="false" onAction="#goBack" text="Cancel" styleClass="secondary-button" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
